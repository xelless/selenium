  srcs = glob(['*.js']),
  deps = [
    ':deps',
  ],
  flags = [
    '--define=goog.NATIVE_ARRAY_PROTOTYPES=false',
  ],
  visibility = [
    '//javascript/selenium-core:atoms.js',
  ],
)


